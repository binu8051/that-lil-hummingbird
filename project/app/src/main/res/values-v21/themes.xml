<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AlertDialogTheme_V21" parent="android:Theme.Material.Light.Dialog">
        <item name="android:colorAccent">@color/colorAccent</item>
    </style>

    <style name="DatePickerDialogTheme" parent="android:Theme.Material.Light.Dialog">
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:datePickerStyle">@style/DatePickerStyle</item>
    </style>

    <style name="HummingbirdTheme" parent="BaseHummingbirdTheme">
        <item name="android:alertDialogTheme">@style/AlertDialogTheme_V21</item>
        <item name="android:datePickerDialogTheme">@style/DatePickerDialogTheme</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDarkest</item>
    </style>

    <style name="HummingbirdTheme.WithDrawer">
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

</resources>
