<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical">
        <android.support.v7.widget.CardView
            android:layout_marginBottom="@dimen/root_padding"
            style="@style/CardItem">
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/root_padding_half"
                    android:layout_width="wrap_content"
                    android:text="@string/bio"
                    android:textColor="?attr/colorTextPrimary"
                    android:textSize="@dimen/text_large"
                    style="@style/MediumOrBold" />
                <TextView
                    android:id="@+id/tvBio"
                    android:layout_marginBottom="@dimen/root_padding_half"
                    android:lineSpacingExtra="2dp"
                    android:maxLines="250"
                    tools:text="Kazuma Satou is a shut-in die-hard fan of games, anime, and manga. A traffic accident brings his disappointingly brief life to an end, or it should have, but he wakes up and sees a beautiful girl who introduces herself as a goddess. She asks him if he'd like to go to another world but he can only bring one thing with him. Kazumi chooses to bring the goddess. With that, he is transported to another world and his great adventure subjugating the demon king begins, but first the hard work of finding food, clothing, and shelter begins. Kazuma wants to live in peace, but the goddess raises one problem after another, and then the demon king's army has its eyes set on him."
                    style="@style/AnimeSynopsis" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_marginBottom="@dimen/root_padding"
            style="@style/CardItem">
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="vertical">
                <com.charlesmadere.hummingbird.views.KeyValueTextView
                    android:id="@+id/kvtvLastUpdate"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:visibility="gone"
                    tools:text="Last update 2 days ago"
                    tools:visibility="visible" />
                <com.charlesmadere.hummingbird.views.KeyValueTextView
                    android:id="@+id/kvtvLifeSpentOnAnime"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:visibility="gone"
                    tools:text="Life spent on anime 24 hours"
                    tools:visibility="visible" />
                <com.charlesmadere.hummingbird.views.KeyValueTextView
                    android:id="@+id/kvtvWaifuOrHusbando"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:visibility="gone"
                    tools:text="Waifu Ryuko Matoi"
                    tools:visibility="visible" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/cvWebsite"
            android:layout_marginBottom="@dimen/root_padding"
            android:visibility="gone"
            tools:visibility="visible"
            style="@style/CardItem.NoPadding">
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/root_padding_half"
                    android:layout_marginEnd="@dimen/root_padding"
                    android:layout_marginStart="@dimen/root_padding"
                    android:layout_marginTop="@dimen/root_padding_half"
                    android:layout_width="wrap_content"
                    android:text="@string/website"
                    style="@style/MediumOrBold" />
                <TextView
                    android:background="?attr/selectableItemBackground"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:id="@+id/tvWebsite"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:lines="1"
                    android:maxLines="1"
                    android:minHeight="@dimen/list_item_height"
                    android:paddingBottom="@dimen/root_padding_half"
                    android:paddingEnd="@dimen/root_padding"
                    android:paddingStart="@dimen/root_padding"
                    android:paddingTop="@dimen/root_padding_half"
                    android:singleLine="true"
                    tools:text="http://www.google.com/" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
