<?xml version="1.0" encoding="utf-8"?>
<com.charlesmadere.hummingbird.views.ReplySubstoryItemView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:foreground="?attr/selectableItemBackground"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:paddingBottom="@dimen/root_padding_half"
    android:paddingTop="@dimen/root_padding_half">
    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/sdvAvatar"
            android:layout_marginEnd="@dimen/root_padding_half"
            style="@style/Avatar.Small" />
        <com.charlesmadere.hummingbird.views.KeyValueTextView
            android:ellipsize="end"
            android:id="@+id/kvtvReply"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/sdvAvatar"
            android:layout_width="match_parent"
            android:maxLines="4"
            android:textSize="@dimen/text_small"
            tools:text="thelithlord in the last bit of the audio-only video, Haruhi says, And with that taken care of, I'd like to announce that the SOS Brigade has a lot of fun things planned for this year! Make sure to check for info regularly! That could mean anything" />
        <com.charlesmadere.hummingbird.views.TypefaceTextView
            android:id="@+id/tvTimeAgo"
            android:layout_below="@id/kvtvReply"
            android:layout_toEndOf="@id/sdvAvatar"
            android:textSize="@dimen/text_small"
            tools:text="2 days ago"
            style="@style/TimeOrDate" />
    </RelativeLayout>
</com.charlesmadere.hummingbird.views.ReplySubstoryItemView>
