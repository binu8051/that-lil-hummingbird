<?xml version="1.0" encoding="utf-8"?>
<com.charlesmadere.hummingbird.views.StoryItemFollowedView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:foreground="?attr/selectableItemBackground"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    app:contentPaddingBottom="@dimen/root_padding_half"
    app:contentPaddingLeft="@dimen/root_padding"
    app:contentPaddingRight="@dimen/root_padding"
    app:contentPaddingTop="@dimen/root_padding_half">
    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/sdvAvatar"
            android:layout_marginEnd="@dimen/root_padding"
            app:placeholderImage="@drawable/image_placeholder"
            style="@style/Avatar.Medium" />
        <TextView
            android:id="@+id/tvTitle"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/sdvAvatar"
            android:layout_width="match_parent"
            android:textColor="@color/black"
            android:textSize="@dimen/text_large"
            tools:text="ThatLilChestnut followed 1 user"
            style="@style/MediumOrBold" />
        <TextView
            android:id="@+id/tvTimeAgo"
            android:layout_below="@id/tvTitle"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/root_padding_half"
            android:layout_toEndOf="@id/sdvAvatar"
            android:layout_width="match_parent"
            android:maxLines="2"
            android:textColor="@color/secondaryText"
            tools:text="11 days ago" />
        <LinearLayout
            android:divider="@drawable/divider"
            android:layout_below="@id/tvTimeAgo"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/root_padding_half"
            android:layout_toEndOf="@id/sdvAvatar"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:showDividers="beginning|middle">
            <include
                android:id="@+id/sifsvZero"
                layout="@layout/item_story_followed_substory" />
            <include
                android:id="@+id/sifsvOne"
                layout="@layout/item_story_followed_substory" />
            <include
                android:id="@+id/sifsvTwo"
                layout="@layout/item_story_followed_substory" />
        </LinearLayout>
    </RelativeLayout>
</com.charlesmadere.hummingbird.views.StoryItemFollowedView>
