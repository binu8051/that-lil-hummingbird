<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical">
        <android.support.v7.widget.CardView
            android:foreground="?attr/selectableItemBackground"
            android:id="@+id/cvPoster"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/root_padding_double"
            android:layout_marginTop="@dimen/root_padding"
            android:layout_width="wrap_content"
            app:cardElevation="@dimen/root_padding_half">
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/sdvPoster"
                android:layout_width="200dp"
                style="@style/AnimePoster" />
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_marginBottom="@dimen/root_padding"
            style="@style/CardItem">
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="vertical">
                <com.charlesmadere.hummingbird.views.TypefaceTextView
                    android:id="@+id/tvTitle"
                    tools:text="KonoSuba: God's Blessing on This Wonderful World!"
                    style="@style/AnimeTitle" />
                <com.charlesmadere.hummingbird.views.TypefaceTextView
                    android:id="@+id/tvShowType"
                    tools:text="@string/movie"
                    style="@style/AnimeShowType" />
                <com.charlesmadere.hummingbird.views.TypefaceTextView
                    android:id="@+id/tvGenres"
                    tools:text="Comedy, Mystery, Romance"
                    tools:visibility="visible"
                    style="@style/AnimeGenres" />
                <com.charlesmadere.hummingbird.views.TypefaceTextView
                    android:id="@+id/tvAgeRating"
                    tools:text="@string/pg13"
                    tools:visibility="visible"
                    style="@style/AgeRating" />
                <com.charlesmadere.hummingbird.views.TypefaceTextView
                    android:id="@+id/tvEpisodeCount"
                    tools:text="20 episodes"
                    tools:visibility="visible"
                    style="@style/AnimeEpisodeCount" />
                <android.support.v4.widget.Space
                    android:layout_height="@dimen/root_padding_half"
                    android:layout_width="match_parent" />
                <com.charlesmadere.hummingbird.views.KeyValueTextView
                    android:id="@+id/kvtvAired"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:visibility="gone"
                    tools:text="Aired March 31st, 2014"
                    tools:visibility="visible" />
                <com.charlesmadere.hummingbird.views.KeyValueTextView
                    android:id="@+id/kvtvStartedAiring"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:visibility="gone"
                    tools:text="Started airing March 31st, 2014"
                    tools:visibility="visible" />
                <com.charlesmadere.hummingbird.views.KeyValueTextView
                    android:id="@+id/kvtvFinishedAiring"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:visibility="gone"
                    tools:text="Finished airing August 31st, 2014"
                    tools:visibility="visible" />
                <com.charlesmadere.hummingbird.views.KeyValueTextView
                    android:id="@+id/kvtvCommunityRating"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    tools:text="Community rating 4.125" />
                <com.charlesmadere.hummingbird.views.KeyValueTextView
                    android:id="@+id/kvtvProducers"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:visibility="gone"
                    tools:text="Nintendo, Microsoft, Google"
                    tools:visibility="visible" />
                <ImageButton
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/youtube_link"
                    android:id="@+id/ibYouTubeLink"
                    android:layout_gravity="end"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:padding="@dimen/root_padding_half"
                    android:src="?attr/ic_video_library_24dp"
                    android:visibility="gone"
                    tools:visibility="visible" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_marginBottom="@dimen/root_padding"
            style="@style/CardItem">
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="vertical">
                <com.charlesmadere.hummingbird.views.TypefaceTextView
                    android:text="@string/synopsis"
                    style="@style/CardHeader" />
                <com.charlesmadere.hummingbird.views.TypefaceTextView
                    android:id="@+id/tvSynopsis"
                    tools:text="Kazuma Satou is a shut-in die-hard fan of games, anime, and manga. A traffic accident brings his disappointingly brief life to an end, or it should have, but he wakes up and sees a beautiful girl who introduces herself as a goddess. She asks him if he'd like to go to another world but he can only bring one thing with him. Kazumi chooses to bring the goddess. With that, he is transported to another world and his great adventure subjugating the demon king begins, but first the hard work of finding food, clothing, and shelter begins. Kazuma wants to live in peace, but the goddess raises one problem after another, and then the demon king's army has its eyes set on him."
                    style="@style/CardParagraph" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
