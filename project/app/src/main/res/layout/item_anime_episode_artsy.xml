<?xml version="1.0" encoding="utf-8"?>
<com.charlesmadere.hummingbird.views.AnimeEpisodeItemView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/CardItem.NoPadding">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sdvBackground"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:actualImageScaleType="centerCrop"
        app:overlayImage="@drawable/image_overlay_bottom"
        app:placeholderImage="@drawable/image_placeholder"
        app:viewAspectRatio="3" />
    <com.charlesmadere.hummingbird.views.TypefaceTextView
        android:id="@+id/tvNumber"
        android:layout_gravity="end"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/root_padding"
        android:layout_marginTop="@dimen/root_padding_half"
        android:layout_width="wrap_content"
        android:shadowColor="@color/black"
        android:shadowDy="2"
        android:shadowRadius="4"
        android:textColor="@color/white"
        android:textSize="@dimen/text_xxlarge"
        app:typeface="open_sans_extra_bold"
        tools:text="12" />
    <LinearLayout
        android:layout_gravity="bottom"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/root_padding_half"
        android:paddingEnd="@dimen/root_padding"
        android:paddingStart="@dimen/root_padding"
        android:paddingTop="@dimen/root_padding_half">
        <com.charlesmadere.hummingbird.views.TypefaceTextView
            android:id="@+id/tvTitle"
            android:shadowColor="@color/black"
            android:shadowDy="2"
            android:shadowRadius="4"
            android:textColor="@color/white"
            tools:text="Naturals Election"
            style="@style/GroupTitle" />
        <com.charlesmadere.hummingbird.views.TypefaceTextView
            android:id="@+id/tvSynopsis"
            android:maxLines="3"
            android:shadowColor="@color/black"
            android:shadowDy="2"
            android:shadowRadius="4"
            android:textColor="@color/white"
            tools:text="It is mid-December, and SOS Brigade chief Haruhi Suzumiya announces that the Brigade is going to hold a Christmas party in their clubroom, with Japanese hotpot for dinner."
            style="@style/AnimeSynopsis.Limited" />
    </LinearLayout>
</com.charlesmadere.hummingbird.views.AnimeEpisodeItemView>
