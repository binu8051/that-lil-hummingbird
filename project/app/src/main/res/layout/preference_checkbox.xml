<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/ResponsiveWidthCardItem">
    <CheckBox
        android:background="@null"
        android:clickable="false"
        android:id="@+id/checkable"
        android:layout_alignParentEnd="true"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:padding="@dimen/root_padding_half" />
    <com.charlesmadere.hummingbird.views.TypefaceTextView
        android:id="@+id/tvTitle"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/checkable"
        tools:text="Hello, World!"
        style="@style/ResponsiveWidthCardItemHeader" />
    <com.charlesmadere.hummingbird.views.TypefaceTextView
        android:id="@+id/tvDescription"
        android:layout_alignParentStart="true"
        android:layout_below="@id/tvTitle"
        android:layout_toStartOf="@id/checkable"
        tools:text="Hello, World!"
        style="@style/ResponsiveWidthCardItemBody" />
</merge>
