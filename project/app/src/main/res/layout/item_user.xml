<?xml version="1.0" encoding="utf-8"?>
<com.charlesmadere.hummingbird.views.UserItemView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/CardItem">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/sdvAvatar"
            android:layout_marginEnd="@dimen/root_padding"
            style="@style/Avatar.Medium" />
        <com.charlesmadere.hummingbird.views.TypefaceTextView
            android:id="@+id/tvTitle"
            android:layout_gravity="center_vertical"
            tools:text="LimitB"
            style="@style/UserTitle" />
    </LinearLayout>
</com.charlesmadere.hummingbird.views.UserItemView>
