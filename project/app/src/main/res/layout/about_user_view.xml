<?xml version="1.0" encoding="utf-8"?>
<com.charlesmadere.hummingbird.views.AboutUserView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/aboutUserView"
    style="@style/ResponsiveWidthCard">
    <LinearLayout
        style="@style/ResponsiveWidthCardInternal">
        <com.charlesmadere.hummingbird.views.TypefaceTextView
            android:id="@+id/tvTitle"
            tools:text="About thelithlord"
            style="@style/ResponsiveWidthCardHeader" />
        <com.charlesmadere.hummingbird.views.TypefaceTextView
            android:id="@+id/tvAbout"
            tools:text="Bacon ipsum dolor amet boudin short ribs sausage ground round cow."
            style="@style/UserBio.WithMargins" />
        <com.charlesmadere.hummingbird.views.KeyValueTextView
            android:drawableEnd="@drawable/ic_favorite_24dp"
            android:drawablePadding="@dimen/root_padding_half"
            android:id="@+id/kvtvWaifuOrHusbando"
            android:visibility="gone"
            app:valueTextColor="?attr/colorAccent"
            tools:text="Waifu is Ryuuko Matoi"
            tools:visibility="visible"
            style="@style/ResponsiveWidthCardItem" />
        <com.charlesmadere.hummingbird.views.KeyValueTextView
            android:drawableEnd="@drawable/ic_location_on_24dp"
            android:drawablePadding="@dimen/root_padding_half"
            android:id="@+id/kvtvLivesIn"
            android:visibility="gone"
            tools:text="Lives in Honnouji Academy"
            tools:visibility="visible"
            style="@style/ResponsiveWidthCardItem" />
        <com.charlesmadere.hummingbird.views.KeyValueTextView
            android:drawableEnd="@drawable/ic_link_24dp"
            android:drawablePadding="@dimen/root_padding_half"
            android:ellipsize="end"
            android:id="@+id/tvWebsite"
            android:maxLines="1"
            android:visibility="gone"
            tools:text="https://duckduckgo.com/"
            tools:visibility="visible"
            style="@style/ResponsiveWidthCardItem" />
        <LinearLayout
            android:id="@+id/llFollowers"
            style="@style/ResponsiveWidthCardItem">
            <com.charlesmadere.hummingbird.views.TypefaceTextView
                android:id="@+id/tvFollowersHeader"
                tools:text="20"
                style="@style/ResponsiveWidthCardItemHeader" />
            <com.charlesmadere.hummingbird.views.TypefaceTextView
                android:id="@+id/tvFollowersBody"
                tools:text="@string/followers"
                style="@style/ResponsiveWidthCardItemBody" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llFollowing"
            style="@style/ResponsiveWidthCardItem">
            <com.charlesmadere.hummingbird.views.TypefaceTextView
                android:id="@+id/tvFollowingHeader"
                tools:text="12"
                style="@style/ResponsiveWidthCardItemHeader" />
            <com.charlesmadere.hummingbird.views.TypefaceTextView
                android:text="@string/following"
                style="@style/ResponsiveWidthCardItemBody" />
        </LinearLayout>
    </LinearLayout>
</com.charlesmadere.hummingbird.views.AboutUserView>
