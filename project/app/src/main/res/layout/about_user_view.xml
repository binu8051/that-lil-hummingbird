<?xml version="1.0" encoding="utf-8"?>
<com.charlesmadere.hummingbird.views.AboutUserView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/aboutUserView"
    style="@style/ResponsiveWidthCard">
    <LinearLayout
        style="@style/ResponsiveWidthCardInternal">
        <com.charlesmadere.hummingbird.views.TypefaceTextView
            android:id="@+id/tvTitle"
            tools:text="About thelithlord"
            style="@style/ResponsiveWidthCardHeader" />
        <com.charlesmadere.hummingbird.views.TypefaceTextView
            android:id="@+id/tvAbout"
            tools:text="Bacon ipsum dolor amet boudin short ribs sausage ground round cow."
            style="@style/UserBio.WithMargins" />
        <com.charlesmadere.hummingbird.views.HeadBodyItemView
            android:id="@+id/hbivWaifuOrHusbando"
            android:visibility="gone"
            app:iconDrawable="@drawable/ic_favorite_24dp"
            tools:visibility="visible"
            style="@style/ResponsiveWidthCardItem" />
        <com.charlesmadere.hummingbird.views.HeadBodyItemView
            android:id="@+id/hbivLocation"
            android:visibility="gone"
            app:bodyText="@string/location"
            app:iconDrawable="@drawable/ic_location_on_24dp"
            tools:visibility="visible"
            style="@style/ResponsiveWidthCardItem" />
        <com.charlesmadere.hummingbird.views.HeadBodyItemView
            android:id="@+id/hbivWebsite"
            android:visibility="gone"
            app:bodyText="@string/website"
            app:iconDrawable="@drawable/ic_link_24dp"
            tools:visibility="visible"
            style="@style/ResponsiveWidthCardItem" />
        <com.charlesmadere.hummingbird.views.HeadBodyItemView
            android:id="@+id/hbivFollowers"
            style="@style/ResponsiveWidthCardItem" />
        <com.charlesmadere.hummingbird.views.HeadBodyItemView
            android:id="@+id/hbivFollowing"
            app:bodyText="@string/following"
            style="@style/ResponsiveWidthCardItem" />
    </LinearLayout>
</com.charlesmadere.hummingbird.views.AboutUserView>
