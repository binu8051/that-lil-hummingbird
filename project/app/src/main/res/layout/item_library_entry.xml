<?xml version="1.0" encoding="utf-8"?>
<com.charlesmadere.hummingbird.views.LibraryEntryItemView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:foreground="?attr/selectableItemBackground"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    app:contentPaddingBottom="@dimen/root_padding_half"
    app:contentPaddingLeft="@dimen/root_padding"
    app:contentPaddingRight="@dimen/root_padding"
    app:contentPaddingTop="@dimen/root_padding_half">
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/sdvPoster"
            android:layout_marginEnd="@dimen/root_padding"
            style="@style/AnimePoster" />
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvTitle"
                tools:text="The Disappearance of Haruhi Suzumiya"
                style="@style/AnimeTitle" />
            <TextView
                android:id="@+id/tvShowType"
                tools:text="@string/movie"
                style="@style/AnimeShowType" />
            <TextView
                android:id="@+id/tvGenres"
                tools:text="Comedy, Mystery, Romance"
                style="@style/AnimeGenres" />
            <TextView
                android:ellipsize="end"
                android:id="@+id/tvSynopsis"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/root_padding"
                android:layout_width="match_parent"
                android:maxLines="5"
                tools:text="It is mid-December, and SOS Brigade chief Haruhi Suzumiya announces that the Brigade is going to hold a Christmas party in their clubroom, with Japanese hotpot for dinner." />
            <com.charlesmadere.hummingbird.views.KeyValueTextView
                android:id="@+id/kvtvProgress"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/root_padding_half"
                android:layout_width="wrap_content"
                tools:text="Progress 3 / 12" />
            <com.charlesmadere.hummingbird.views.KeyValueTextView
                android:id="@+id/kvtvRating"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                tools:text="Rating 2.5" />
        </LinearLayout>
    </LinearLayout>
</com.charlesmadere.hummingbird.views.LibraryEntryItemView>
