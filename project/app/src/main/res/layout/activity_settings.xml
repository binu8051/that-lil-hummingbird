<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/DrawerLayout">
    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical">
        <include
            layout="@layout/toolbar" />
        <ScrollView
            android:fillViewport="true"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:overScrollMode="never">
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="vertical">
                <android.support.v7.widget.CardView
                    style="@style/SettingsCardItem">
                    <LinearLayout
                        style="@style/SettingsCardInternal">
                        <TextView
                            android:text="@string/general"
                            style="@style/SettingHeader" />
                        <LinearLayout
                            android:id="@+id/llAnimeTitleLanguage"
                            style="@style/SettingItem">
                            <TextView
                                android:text="@string/anime_title_language"
                                style="@style/SettingItemHeader" />
                            <TextView
                                android:id="@+id/tvAnimeTitleLanguage"
                                tools:text="@string/english"
                                style="@style/SettingItemBody" />
                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    style="@style/SettingsCardItem">
                    <LinearLayout
                        style="@style/SettingsCardInternal">
                        <TextView
                            android:text="@string/account"
                            style="@style/SettingHeader" />
                        <TextView
                            android:id="@+id/tvSignOut"
                            android:text="@string/sign_out"
                            style="@style/SettingItem" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    style="@style/SettingsCardItem">
                    <LinearLayout
                        style="@style/SettingsCardInternal">
                        <TextView
                            android:text="@string/credits"
                            style="@style/SettingHeader" />
                        <TextView
                            android:id="@+id/tvAuthor"
                            android:text="@string/app_written_by_charles_madere"
                            style="@style/SettingItem" />
                        <TextView
                            android:id="@+id/tvGitHub"
                            android:text="@string/open_source_on_github"
                            style="@style/SettingItem" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    style="@style/SettingsCardItem">
                    <LinearLayout
                        style="@style/SettingsCardInternal">
                        <TextView
                            android:text="@string/miscellaneous"
                            style="@style/SettingHeader" />
                        <TextView
                            android:id="@+id/tvRateThisApp"
                            android:text="@string/rate_this_app"
                            style="@style/SettingItem" />
                        <TextView
                            android:id="@+id/tvLogViewer"
                            android:text="@string/log_viewer"
                            style="@style/SettingItem" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <TextView
                    android:fontFamily="monospace"
                    android:gravity="center"
                    android:id="@+id/tvVersion"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:padding="@dimen/root_padding"
                    android:textColor="?attr/textColorSecondary"
                    android:textSize="@dimen/text_small"
                    tools:text="v1.0 (1)" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <include
        layout="@layout/navigation_drawer" />
</android.support.v4.widget.DrawerLayout>
