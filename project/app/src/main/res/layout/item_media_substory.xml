<?xml version="1.0" encoding="utf-8"?>
<com.charlesmadere.hummingbird.views.MediaSubstoryItemView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:foreground="?attr/selectableItemBackground"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:paddingBottom="@dimen/root_padding_half"
    android:paddingTop="@dimen/root_padding_half">
    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/sdvAvatar"
            android:layout_marginEnd="@dimen/root_padding_half"
            style="@style/Avatar.Small" />
        <com.charlesmadere.hummingbird.views.KeyValueTextView
            android:id="@+id/kvtvAction"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/sdvAvatar"
            android:layout_width="match_parent"
            app:keyTextColor="?attr/colorAccent"
            app:valueTextColor="?android:attr/textColorPrimary"
            tools:text="ThatLilChestnut is currently watching." />
        <com.charlesmadere.hummingbird.views.TypefaceTextView
            android:id="@+id/tvTimeAgo"
            android:layout_below="@id/kvtvAction"
            android:layout_toEndOf="@id/sdvAvatar"
            android:textSize="@dimen/text_small"
            tools:text="2 days ago"
            style="@style/TimeOrDate" />
    </RelativeLayout>
</com.charlesmadere.hummingbird.views.MediaSubstoryItemView>
