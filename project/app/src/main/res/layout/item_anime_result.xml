<?xml version="1.0" encoding="utf-8"?>
<com.charlesmadere.hummingbird.views.AnimeResultItemView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/CardItem">
    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/sdvPoster"
            android:layout_marginEnd="@dimen/root_padding"
            style="@style/AnimePoster.Small" />
        <com.charlesmadere.hummingbird.views.TypefaceTextView
            android:id="@+id/tvTitle"
            android:layout_toEndOf="@id/sdvPoster"
            tools:text="Kyousougiga"
            style="@style/AnimeTitle.Small" />
        <com.charlesmadere.hummingbird.views.TypefaceTextView
            android:id="@+id/tvDescription"
            android:layout_below="@id/tvTitle"
            android:layout_toEndOf="@id/sdvPoster"
            tools:text="Kyousougiga"
            style="@style/AnimeSynopsis.Limited" />
    </RelativeLayout>
</com.charlesmadere.hummingbird.views.AnimeResultItemView>
