<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="colorAccentSecondary" format="color" />

    <declare-styleable name="AnimeBreakdownPieView">
        <attr name="barThickness" format="dimension" />
        <attr name="primaryColor" format="color" />
        <attr name="secondaryColor" format="color" />
        <attr name="textColor" format="color" />
        <attr name="textSize" format="dimension" />
    </declare-styleable>

    <declare-styleable name="KeyValueTextView">
        <attr name="keyTextColor" format="color" />
        <attr name="valueTextColor" format="color" />
    </declare-styleable>

    <declare-styleable name="NavigationDrawerItemView">
        <attr name="entry" format="enum">
            <enum name="home" value="0" />
            <enum name="hummingbird_on_the_web" value="1" />
            <enum name="notifications" value="2" />
            <enum name="search" value="3" />
            <enum name="settings" value="4" />
        </attr>
    </declare-styleable>

    <declare-styleable name="RefreshLayout">
        <attr name="scrolling_child" format="reference" />
        <attr name="spinner_colors" format="reference" />
    </declare-styleable>

    <declare-styleable name="View">
        <attr name="fixed_side" format="enum">
            <enum name="height" value="0" />
            <enum name="width" value="1" />
        </attr>
        <attr name="height_ratio" format="integer" />
        <attr name="width_ratio" format="integer" />

        <attr name="always_show" format="boolean" />

        <attr name="secondary_typeface" format="enum">
            <enum name="open_sans_bold" value="0" />
            <enum name="open_sans_extra_bold" value="1" />
            <enum name="open_sans_italic" value="2" />
            <enum name="open_sans_light" value="3" />
            <enum name="open_sans_light_italic" value="4" />
            <enum name="open_sans_regular" value="5" />
            <enum name="open_sans_semibold" value="6" />
            <enum name="teko_bold" value="7" />
            <enum name="teko_regular" value="8" />
            <enum name="teko_semibold" value="9" />
        </attr>

        <attr name="typeface" format="enum">
            <enum name="open_sans_bold" value="0" />
            <enum name="open_sans_extra_bold" value="1" />
            <enum name="open_sans_italic" value="2" />
            <enum name="open_sans_light" value="3" />
            <enum name="open_sans_light_italic" value="4" />
            <enum name="open_sans_regular" value="5" />
            <enum name="open_sans_semibold" value="6" />
            <enum name="teko_bold" value="7" />
            <enum name="teko_regular" value="8" />
            <enum name="teko_semibold" value="9" />
        </attr>
    </declare-styleable>

</resources>
