<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AlertDialogTheme_Dark" parent="Theme.AppCompat.Dialog.Alert">
        <item name="colorAccent">?attr/colorAccent</item>
    </style>

    <style name="AlertDialogTheme_Light" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">?attr/colorAccent</item>
    </style>

    <style name="AppBarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">

    </style>

    <style name="BaseHummingbirdTheme_Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="alertDialogTheme">@style/AlertDialogTheme_Dark</item>
        <item name="colorAccent">@color/orange</item>
        <item name="colorDivider">@color/dividerDark</item>
        <item name="colorPrimary">@color/bar</item>
        <item name="colorPrimaryDark">@color/barDark</item>
        <item name="colorTextPrimary">@color/white</item>
        <item name="colorTextSecondary">@color/offWhite</item>
        <item name="android:textColor">?attr/colorTextPrimary</item>
        <item name="android:windowBackground">@color/offBlack</item>
    </style>

    <style name="BaseHummingbirdTheme_Light" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="alertDialogTheme">@style/AlertDialogTheme_Light</item>
        <item name="colorAccent">@color/orange</item>
        <item name="colorDivider">@color/dividerLight</item>
        <item name="colorPrimary">@color/bar</item>
        <item name="colorPrimaryDark">@color/barDark</item>
        <item name="colorTextPrimary">@color/grayDark</item>
        <item name="colorTextSecondary">@color/grayMedium</item>
        <item name="android:textColor">?attr/colorTextPrimary</item>
        <item name="android:windowBackground">@color/offWhite</item>
    </style>

    <style name="HummingbirdTheme_Dark" parent="BaseHummingbirdTheme_Dark">

    </style>

    <style name="HummingbirdTheme_Light" parent="BaseHummingbirdTheme_Dark">

    </style>

    <style name="HummingbirdTheme_Dark.WithDrawer">

    </style>

    <style name="HummingbirdTheme_Light.WithDrawer">

    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">

    </style>

</resources>
