<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/orange</item>
    </style>

    <style name="AppBarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">

    </style>

    <style name="BaseHummingbirdTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="alertDialogTheme">@style/AlertDialogTheme</item>
        <item name="colorAccent">@color/orange</item>
        <item name="colorButtonNormal">@color/bar</item>
        <item name="colorPrimary">@color/bar</item>
        <item name="colorPrimaryDark">@color/barDark</item>
        <item name="android:buttonStyle">@style/ButtonTheme</item>
        <item name="android:windowBackground">@color/windowBackground</item>
    </style>

    <style name="BaseHummingbirdTheme_Gallery" parent="Theme.AppCompat.NoActionBar">
        <item name="colorAccent">@color/orange</item>
        <item name="colorPrimary">@color/bar</item>
        <item name="colorPrimaryDark">@color/barDark</item>
        <item name="android:windowBackground">@color/black</item>
    </style>

    <style name="BaseHummingbirdTheme_Login" parent="BaseHummingbirdTheme">

    </style>

    <style name="BaseHummingbirdTheme_Splash" parent="Theme.AppCompat.NoActionBar">
        <item name="colorAccent">@color/orange</item>
        <item name="colorPrimary">@color/bar</item>
        <item name="colorPrimaryDark">@color/barDark</item>
        <item name="android:windowBackground">@color/barDark</item>
    </style>

    <style name="ButtonTheme" parent="Widget.AppCompat.Button.Colored">
        <item name="android:paddingEnd">@dimen/root_padding_double</item>
        <item name="android:paddingStart">@dimen/root_padding_double</item>
    </style>

    <style name="HummingbirdTheme" parent="BaseHummingbirdTheme">

    </style>

    <style name="HummingbirdTheme.WithDrawer">

    </style>

    <style name="HummingbirdTheme_Gallery" parent="BaseHummingbirdTheme_Gallery">

    </style>

    <style name="HummingbirdTheme_Login" parent="BaseHummingbirdTheme_Login">

    </style>

    <style name="HummingbirdTheme_Splash" parent="BaseHummingbirdTheme_Splash">

    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">

    </style>

</resources>
